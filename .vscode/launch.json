{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (OpenOCD)",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/keypad-firmware.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "device": "STM32F401CCUx",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f4x.cfg"
            ],
            "svdFile": "${workspaceRoot}/.vscode/STM32F401.svd",
            
            "runToEntryPoint": "main",
            "postLaunchCommands": [
                "monitor reset halt",
                "break main",
                "continue"
            ],
            
            "preLaunchCommands": [
                "monitor reset"
            ],
            "preLaunchTask": "CMake: build",
            "showDevDebugOutput": "parsed",
            "armToolchainPath": "/opt/st/stm32cubeclt_1.18.0/GNU-tools-for-STM32/bin"
        }
    ]
}